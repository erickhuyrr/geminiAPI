  "description": "Simple Express server using Google Gemini (Generative AI) via @google/genai",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node --enable-source-maps server.js",
    "dev": "nodemon --watch . --exec \"node server.js\""
